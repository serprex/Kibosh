#!/usr/bin/python
from __future__ import division
import pyglet
from pyglet.gl import *
from socket import *
from math import *
from select import select
from itertools import count,chain
from marshal import dumps,loads
from random import getrandbits
from time import time,sleep
from sys import argv
try:
	range=xrange
	from itertools import imap as map,izip as zip,ifilter as filter
	getnext=lambda x:x.next
except:
	cmp=lambda x,y:(x>y)or-(x<y)
	getnext=lambda x:x.__next__
for a in range(1,16):globals().update(("pi%X%X"%(a,b),pi*a/b) for b in range(1,16))
tcp=socket(AF_INET,SOCK_STREAM)
tcp.setsockopt(SOL_SOCKET,SO_REUSEADDR,1)
blue=getrandbits(1)
hopo="",2000
for a in chain(open("K.txt").readlines(),argv[1:]):
	if a.startswith("#"):continue
	elif a=="b":blue=1
	elif a=="r":blue=0
	elif ":" in a:hopo=(a[:a.find(":")] or hopo[0] if a.find("::")==-1 else ""),int(a[a.rfind(":")+1:] or hopo[1])
	elif "." in a:hopo=a,hopo[1]
	elif a.isdigit():hopo=hopo[0],int(a)
if hopo[0]:
	tcp.connect(hopo)
	blue=tcp.recv(1)=="\0"
	tcp.send("\0")
	lag=time()
	tcp.recv(1)
	lag=(time()-lag)/2
else:
	tcp.bind(hopo)
	tcp.listen(1)
	tcp=tcp.accept()[0]
	tcp.send(chr(blue))
	lag=time()
	tcp.recv(1)
	lag=(time()-lag)/2
	tcp.send("\0")
	sleep(lag)
tcp.setsockopt(IPPROTO_TCP,TCP_NODELAY,1)
recv=tcp.recv
send=tcp.send
pyglet.clock.set_fps_limit(30)
W=pyglet.window.Window(width=320,height=512)
W.set_location(200+400*blue,100)
glEnable(GL_BLEND)
glBlendFunc(GL_SRC_ALPHA,GL_ONE)
GLF3=GLfloat*3
Red,Blu,Gre,Wht,Blk=RGB=GLF3(1.,0.,0.),GLF3(0.,0.,1.),GLF3(0.,1.,0.),GLF3(1.,1.,1.),GLF3(0.,0.,0.)
class Node:
	def __init__(s,*x):
		s.x,s.y,s.p=x
		s.awds=[0,0,0,0]
	def move(s):
		if hit:return
		if s.awds[2]-s.awds[0] and s.awds[1]-s.awds[3]:
			s.x+=(s.awds[2]-s.awds[0]<<2)*3>>2
			s.y+=(s.awds[1]-s.awds[3]<<2)*3>>2
		else:
			s.x+=s.awds[2]-s.awds[0]<<2
			s.y+=s.awds[1]-s.awds[3]<<2
		if s.x<0:s.x=0
		elif s.x>320:s.x=320
		if s.y<0:s.y=0
		elif s.y>511:s.y=511
class Cannon:
	die=lambda s:1
	def __init__(s,p,x,y,d,v,t,D=None):
		s.p=p
		s.x=x
		s.y=y
		s.v=sin(d)*v
		s.h=cos(d)*v
		s.t=t
		s.d=d if D is None else D
	def __call__(s):
		s.x+=s.h
		s.y+=s.v
		s.d+=ptdir(s.d,atan2(Y0-s.y,X0-s.x),pi19)
		if not (-32<s.x<352 and -32<s.y<544):return s.die()
		for a in NN:
			if (a.x-s.x)**2+(a.y-s.y)**2<256:return s.die()
		if not T%s.t:Bul(s.p,s.x,s.y,s.d,s.v*2)
		glColor3fv(RGB[s.p])
		for a in GL_QUADS,GL_LINE_LOOP:
			glBegin(a)
			glVertex2f(s.x+16*cos(T),s.y+16*sin(T))
			glVertex2f(s.x+16*cos(T+pi12),s.y+16*sin(T+pi12))
			glVertex2f(s.x+16*cos(T+pi),s.y+16*sin(T+pi))
			glVertex2f(s.x+16*cos(T+pi32),s.y+16*sin(T+pi32))
			glEnd()
			glColor3fv(Wht)
		glColor3fv(RGB[s.p])
		glBegin(GL_TRIANGLES)
		glVertex2f(s.x,s.y)
		glVertex2f(s.x+24*cos(s.d-pi16),s.y+24*sin(s.d-pi16))
		glVertex2f(s.x+24*cos(s.d+pi16),s.y+24*sin(s.d+pi16))
		glEnd()
class Gattle:
	die=lambda s:1
	def __init__(s,p,x,y,d,v,t):
		s.p=p
		s.x=x
		s.y=y
		s.v=sin(d)*v
		s.h=cos(d)*v
		s.t=t
		s.d=0
	def __call__(s):
		s.x+=s.h
		s.y+=s.v
		s.d+=pi19/10
		if not (-32<s.x<352 and -32<s.y<544):return s.die()
		for a in NN:
			if (a.x-s.x)**2+(a.y-s.y)**2<64:return s.die()
		if not T%s.t:
			Bul(s.p,s.x,s.y,s.d,s.v*1.5)
			Bul(s.p,s.x,s.y,s.d+pi23,s.v*1.5)
			Bul(s.p,s.x,s.y,s.d-pi23,s.v*1.5)
		glColor3fv(RGB[s.p])
		for a in GL_TRIANGLES,GL_LINE_LOOP:
			glBegin(a)
			glVertex2f(s.x,s.y)
			glVertex2f(s.x+24*cos(s.d-pi16),s.y+24*sin(s.d-pi16))
			glVertex2f(s.x+24*cos(s.d+pi16),s.y+24*sin(s.d+pi16))
			glVertex2f(s.x,s.y)
			glVertex2f(s.x+24*cos(s.d-pi16+pi23),s.y+24*sin(s.d-pi16+pi23))
			glVertex2f(s.x+24*cos(s.d+pi16+pi23),s.y+24*sin(s.d+pi16+pi23))
			glVertex2f(s.x,s.y)
			glVertex2f(s.x+24*cos(s.d-pi16-pi23),s.y+24*sin(s.d-pi16-pi23))
			glVertex2f(s.x+24*cos(s.d+pi16-pi23),s.y+24*sin(s.d+pi16-pi23))
			glEnd()
			glColor3fv(Wht)
NN=N1,N2=(Node(80,160,0),Node(240,320,1))[::1-(blue<<1)]
X0=Y0=Z0=.5
pause=hit=T=0
life=3
B=[]
class F:
	def __init__(s):
		s.F={}
		s.f=getnext(count())
	def __call__(s,x):
		s.F[s.f()&1023]=x
	def __del__(s,x):
		del s.F[x]
F=F()
def flost(x):return dumps(x)[1:] if x.__class__ is float else loads("g"+x)
def ptdir(x,y,m):
	x%=pi21
	y%=pi21
	z=abs(x-y)
	return min(m,z) if (x+z)%pi21==y else -min(m,z)
def Bul(p,x,y,d,v):
	global B
	B+=[p,x,y,cos(d)*v,sin(d)*v],
def miss():
	global hit,life
	if not hit:
		if not life:"dead"
		hit=1
		life-=1
def on_key(k,o):
	global pause
	if 65360<k<65365:
		N1.awds[k-65361]=o
		send("%c%c%c"%(0xF0|N1.awds[0]|N1.awds[1]<<1|N1.awds[2]<<2|N1.awds[3]<<3,N1.x>>1,N1.y>>1))
	elif k==112:
		pause=not pause
		send("\xE0"+("%c%c%c%c%c"%(T&255,T>>8&255,T>>16&255,len(B)&255,len(B)>>8)+"".join("%c%c%c%s%s"%((b[2]&256>>6)|(b[1]&256>>7)|p,b[1]&255,b[2]&255,flost(b[3]),flost(b[4])) for b in B) if pause else ""))
	elif k==65307:W.has_exit=1
W.on_key_press=lambda k,m:on_key(k,1)
W.on_key_release=lambda k,m:on_key(k,0)
F(Cannon(1,100,400,pi32,2,16))
F(Gattle(0,200,400,pi32,2,16))
while not W.has_exit:
	W.dispatch_events()
	if pause:
		while select((tcp,),(),(),0)[0]:
			r=ord(recv(1))
			if r&0xF0==0xF0:
				N2.awds=r&1,r>>1&1,r>>2&1,r>>3&1
				N2.x=ord(recv(1))<<1
				N2.y=ord(recv(1))<<1
			elif r==0xE0:pause=0
			elif r==0xEF:exit()
			else:raise Exception("%x %s"%(r,recv(64)))
	else:
		N1.move()
		while select((tcp,),(),(),0)[0]:
			r=ord(recv(1))
			if r&0xF0==0xF0:
				N2.awds=r&1,r>>1&1,r>>2&1,r>>3&1
				N2.x=ord(recv(1))<<1
				N2.y=ord(recv(1))<<1
			elif r&0xD0==0xD0:del F[(r&15)|ord(recv(1))<<8]
			elif r==0xE0:
				pause=1
				T=ord(recv(1))|ord(recv(1))<<8|ord(recv(1))<<16
				B=[[b&1,ord(recv(1))|(b&2)>>1,ord(recv(1))|(b&4)>>2,flost(recv(8)),flost(recv(8))] for b in (ord(recv(1)) for b in range(ord(recv(1))|ord(recv(1))<<8))]
				break
			elif r==0xEE:miss()
			elif r==0xEF:exit()
			else:raise Exception("%x %s"%(r,recv(64)))
		N2.move()
		Z0+=(N1.y-N2.y)/((N1.x-N2.x)**2+(N1.y-N2.y)**2+1)**.5
		if Z0<0.:Z0=0.
		elif Z0>1.:Z0=1.
		X0=N1.x+(N2.x-N1.x)*Z0
		Y0=N1.y+(N2.y-N1.y)*Z0
		if hit:
			for s in NN:
				s.x-=cmp(s.x,160)<<4
				s.y-=cmp(s.y,256)<<4
				if -24<s.x-160<24:s.x=160
				if -24<s.y-256<24:s.y=256
			hit=not(256==N1.y==N2.y and 160==N1.x==N2.x)
			B=[]
		r=[]
		glDisable(GL_BLEND)
		glBegin(GL_QUADS)
		for a,b in enumerate(B):
			glColor3fv(RGB[b[0]])
			glVertex2f(b[1]+3.,b[2])
			glVertex2f(b[1],b[2]+3.)
			glVertex2f(b[1]-3.,b[2])
			glVertex2f(b[1],b[2]-3.)
			b[1]-=b[3]
			b[2]-=b[4]
			glVertex2f(b[1]+6.,b[2])
			glVertex2f(b[1],b[2]+6.)
			glVertex2f(b[1]-6.,b[2])
			glVertex2f(b[1],b[2]-6.)
			glColor3fv(Wht if b[0]==1 else Blk)
			glVertex2f(b[1]+4.,b[2])
			glVertex2f(b[1],b[2]+4.)
			glVertex2f(b[1]-4.,b[2])
			glVertex2f(b[1],b[2]-4.)
			if (b[1]-X0)**2+(b[2]-Y0)**2<81:
				if Z0<.9 and (Z0 or b[0]!=blue):
					send("\xEE")
					miss()
					break
				r+=a,
			elif not (-32.<b[1]<352. and -32.<b[2]<544.):r+=a,
		glEnd()
		glEnable(GL_BLEND)
		for r in reversed(r):del B[r]
		for r in [a for a in F if F[a]()]:
			send("%c%c"%(0xD0|(a&15),a>>4&255))
			del F[r]
		glBegin(GL_LINES)
		glColor3fv(RGB[blue])
		glVertex2i(N1.x,N1.y)
		glColor3fv(RGB[not blue])
		glVertex2i(N2.x,N2.y)
		glEnd()
		for s in NN:
			glBegin(GL_TRIANGLE_FAN)
			glColor3fv(Blk)
			glVertex2i(s.x,s.y)
			glColor3fv(RGB[s.p])
			for a in range(7):
				glVertex2f(s.x+cos(a*pi13+T)*24.,s.y+sin(a*pi13+T)*24.)
			glEnd()
		glColor3fv(Wht)
		glBegin(GL_TRIANGLE_FAN)
		glVertex2f(X0,Y0)
		glColor4f(0.,0.,0.,0.)
		for a in range(7):
			glVertex2f(X0+cos(a*pi13-T)*24.,Y0+sin(a*pi13+T)*24.)
		glEnd()
	W.flip()
	glClear(GL_COLOR_BUFFER_BIT)
	T+=1
	pyglet.clock.tick()
send("\xEF")
